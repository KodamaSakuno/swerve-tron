.box-solid {
  box-sizing: border-box;
  margin: 0px;
  min-width: 0px;
  width: 100%;
  border-radius: 16px;
  padding: 1.25rem;
  border: 1px solid rgb(44, 47, 54);
  background-color: rgb(33, 36, 41);
}
.common-content {
  box-sizing: border-box;
  margin: 0px;
  min-width: 0px;
  width: 100%;
  display: flex;
  padding: 0px;
  -webkit-box-align: center;
  align-items: center;
  -webkit-box-pack: justify;
  justify-content: space-between;
}
.lh20 {
  line-height: 20px;
}

// ---

.r-content {
  position: relative;
  box-sizing: border-box;
}
.rc-content {
  display: grid;
  grid-auto-rows: auto;
  row-gap: 12px;
}

.amount-content {
  display: grid;
  grid-auto-rows: auto;
  row-gap: 20px;
}

.aca-title {
  box-sizing: border-box;
  margin: 0px;
  min-width: 0px;
  font-weight: 500;
}
.aca-toggle {
  box-sizing: border-box;
  margin: 0px;
  min-width: 0px;
  font-weight: 500;
  color: rgb(33, 114, 229);
  cursor: pointer;
}
.ac-percentage {
  box-sizing: border-box;
  margin: 0px;
  min-width: 0px;
  width: 100%;
  display: flex;
  padding: 0px;
  -webkit-box-align: center;
  align-items: flex-end;
  .acp-number {
    box-sizing: border-box;
    margin: 0px;
    min-width: 0px;
    font-size: 72px;
    font-weight: 500;
  }
}

.ac-rang {
  writing-mode: horizontal-tb !important;
  text-rendering: auto;
  word-spacing: normal;
  text-transform: none;
  text-indent: 0px;
  text-shadow: none;
  display: inline-block;
  text-align: start;
  -webkit-rtl-ordering: logical;
  font: 400 13.3333px Arial;
  appearance: none;
  background: transparent;
  cursor: pointer;
  outline: none;
  width: 90%;
  margin-left: 15px;
  margin-right: 15px;
  padding: 15px 0px;
  &::-webkit-slider-runnable-track {
    background: linear-gradient(90deg, rgb(108, 114, 132), rgb(64, 68, 79));
    height: 2px;
  }

  &::-webkit-slider-thumb {
    appearance: none;
    height: 28px;
    width: 28px;
    background-color: rgb(86, 90, 105);
    border-radius: 100%;
    border: none;
    transform: translateY(-50%);
    color: rgb(33, 36, 41);
  }
}

.ac-tag {
  box-sizing: border-box;
  margin: 0px;
  min-width: 0px;
  width: 100%;
  display: flex;
  padding: 0px;
  -webkit-box-align: center;
  align-items: center;
  -webkit-box-pack: justify;
  justify-content: space-between;
}
.act-button {
  padding: 0.5rem 1rem;
  background-color: rgba(21, 61, 111, 0.44);
  border: 1px solid rgba(21, 61, 111, 0.44);
  border-radius: 0.5rem;
  font-size: 1rem;
  font-weight: 500;
  cursor: pointer;
  margin: 0.25rem;
  overflow: hidden;
  color: rgb(33, 114, 229);
  user-select: none;
  &:hover {
    border: 1px solid rgb(33, 114, 229);
  }
  &:focus {
    border: 1px solid rgb(33, 114, 229);
    outline: none;
  }
}

.ac-total {
  display: grid;
  grid-auto-rows: auto;
  row-gap: 10px;
  .act-list {
    box-sizing: border-box;
    margin: 0px;
    min-width: 0px;
    width: 100%;
    display: flex;
    padding: 0px;
    -webkit-box-align: center;
    align-items: center;
    -webkit-box-pack: justify;
    justify-content: space-between;
  }
  .actl-text {
    box-sizing: border-box;
    margin: 0px;
    min-width: 0px;
    font-size: 24px;
    font-weight: 500;
    overflow: hidden;
    white-space: nowrap;
    text-overflow:ellipsis;
    max-width: 255px;
  }
  .actl-token {
    box-sizing: border-box;
    margin: 0px;
    min-width: 0px;
    display: flex;
    padding: 0px;
    -webkit-box-align: center;
    align-items: center;
    width: fit-content;
  }
  .actlt-logo-other {
    width: 24px;
    height: 24px;
    margin-right: 12px;
  }
  .actlt-logo {
    width: 24px;
    height: 24px;
    box-shadow: rgba(0, 0, 0, 0.075) 0px 6px 10px;
    border-radius: 24px;
    margin-right: 12px;
  }
  .receive-token {
    box-sizing: border-box;
    margin: 0px;
    min-width: 0px;
    width: 100%;
    display: flex;
    padding: 0px;
    -webkit-box-align: center;
    align-items: center;
    -webkit-box-pack: justify;
    justify-content: flex-end;
  }
  .rt-toggle {
    text-decoration: none;
    cursor: pointer;
    color: rgb(33, 114, 229);
    font-weight: 500;
    font-size: 16px;
  }
}

.r-button {
  box-sizing: border-box;
  margin: 0px 0.5rem 0px 0px;
  min-width: 0px;
  appearance: none;
  text-align: center;
  line-height: inherit;
  text-decoration: none;
  padding: 18px;

  color: white;
  border-radius: 20px;
  font-weight: 500;
  font-size: 16px;
  width: 100%;
  border: 1px solid transparent;
  outline: none;
  display: flex;
  -webkit-box-pack: center;
  justify-content: center;
  flex-wrap: nowrap;
  -webkit-box-align: center;
  align-items: center;
  cursor: pointer;
  position: relative;
  z-index: 1;
  background-color: rgb(33, 114, 229);
  &.approve,
  &.remove {
    &:hover {
      background-color: rgb(25, 102, 212);
    }
  }
  &.remove {
    &[disabled] {
      background-color: rgb(64, 68, 79);
      color: rgb(108, 114, 132);
      cursor: auto;
      box-shadow: none;
      border: 1px solid transparent;
      outline: none;
      opacity: 1;
    }
  }
}

.loading {
  text-align: center;
}
.warning {
  border-radius: 4px;
  background-color: yellow;
  color: black;
  font-size: 12px;
}