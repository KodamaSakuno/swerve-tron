
.content {
  display: grid;
  grid-auto-rows: auto;
  row-gap: 24px;
  justify-items: center;
  box-sizing: border-box;
}
.join-pool-button {
  width: 100%;
  font-weight: 500;
  text-align: center;
  border-radius: 20px;
  outline: none;
  border: 1px solid transparent;
  text-decoration: none;
  display: flex;
  -webkit-box-pack: center;
  justify-content: center;
  flex-wrap: nowrap;
  -webkit-box-align: center;
  align-items: center;
  cursor: pointer;
  position: relative;
  z-index: 1;
  background-color: rgb(33, 114, 229);
  color: white;
  padding: 16px;
  box-sizing: border-box;

  .jpb-text {
    box-sizing: border-box;
    margin: 0px;
    min-width: 0px;
    font-weight: 500;
    font-size: 20px;
    line-height: 24px;
  }
}
.liquidity {
  width: 100%;
  display: grid;
  grid-auto-rows: auto;
  row-gap: 12px;
}
.l-header {
  box-sizing: border-box;
  margin: 0px;
  min-width: 0px;
  width: 100%;
  display: flex;
  -webkit-box-align: center;
  align-items: center;
  padding: 0px 8px;
  -webkit-box-pack: justify;
  justify-content: space-between;
  letter-spacing: -0.018em;
}
.lh-title {
  box-sizing: border-box;
  margin: 0px;
  min-width: 0px;
  color: rgb(255, 255, 255);
  font-weight: 500;
  line-height: 20px;
  letter-spacing: -0.018em;
}
.lh-help {
  margin-left: 4px;
}
.l-list {
  box-sizing: border-box;
  margin: 0px;
  min-width: 0px;
  width: 100%;
  border-radius: 16px;
  padding: 8px;
  border: 1px solid rgb(44, 47, 54);
  background-color: rgb(33, 36, 41);
}
.ll-empty {
  box-sizing: border-box;
  margin: 1.25rem;
  min-width: 0px;
  font-weight: 400;
  font-size: 16px;
  color: rgb(108, 114, 132);
  text-align: center;
  line-height: 20px;
}
.ll-connect {
  box-sizing: border-box;
  margin: 0px;
  min-width: 0px;
  font-weight: 400;
  font-size: 16px;
  color: rgb(108, 114, 132);
  text-align: center;
  letter-spacing: -0.018em;
}
.l-join {
  box-sizing: border-box;
  margin: 0px;
  min-width: 0px;
  text-align: center;
  padding: 0.5rem 0px;
  font-size: 14px;
}
.lj-import {
  text-decoration: none;
  cursor: pointer;
  color: rgb(33, 114, 229);
  font-weight: 500;
}
