:host
    display flex
    -webkit-box-align center
    align-items center
    -webkit-box-pack center
    justify-content center
    padding 0.2rem
    border none
    background none rgb(44, 47, 54)
    outline none
    cursor default
    border-radius 36px
    color rgb(195, 197, 203)
    width 16px
    height 16px
    margin 0 0 0 4px

    &:hover,
    &:focus
        opacity 0.7

.help-icon
    width 16px
    height 16px
    font-size 16px