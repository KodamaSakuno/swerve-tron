.c-model {
  display: flex;
  align-self: center;
  outline: none;
  border: 1px solid rgb(33, 36, 41);
  border-radius: 20px;
  background-color: rgb(33, 36, 41);
  box-shadow: rgba(0, 0, 0, 0.05) 0px 4px 8px 0px;
  padding: 0px;
  max-width: 420px;
  max-height: 90vh;
  overflow: hidden;
  .el-dialog__header {
    display: none;
  }
  .el-dialog__body {
    width: 100%;
    padding: 0;
    color: inherit;
    font-size: inherit;
  }
}
.c-model-container {
  display: flex;
  flex-flow: column nowrap;
  margin: 0px;
  padding: 0px;
  width: 100%;
}
.c-model-header
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
  padding: 1rem;
  font-weight: 500;
  color: #fff;
.c-model-header-content
  display: flex;
  align-items: center;

.c-model-close {
  width: 24px;
  height: 24px;
  cursor: pointer;
  &:hover {
    cursor: pointer;
    opacity: 0.6;
  }
  &-icon {
    width: 24px;
    height: 24px;
  }
}
.c-model-body
  display: block;

.c-model-footer {
  display: block;
  padding-bottom: 1rem;
}


// dialog start
.connect-wallet-dialog {
  margin: 10vh auto;
  background: #fff;
  outline: none;
  border: 1px solid rgb(33, 36, 41);
  background-color: rgb(33, 36, 41);
  box-shadow: rgba(0, 0, 0, 0.05) 0px 4px 8px 0px;
  padding: 0px;
  overflow: hidden;
  align-self: center;
  max-width: 420px;
  max-height: 90vh;
  display: flex;
  border-radius: 20px;
  .cwdc-content {
    display: flex;
    flex-flow: column nowrap;
    margin: 0px;
    padding: 0px;
    width: 100%;
    position: relative;
  }
  .cwd-list {
    background-color: rgb(44, 47, 54);
    padding: 2rem;
    border-bottom-left-radius: 20px;
    border-bottom-right-radius: 20px;
    box-sizing: border-box;
  }
  .cwd-item {
    display: grid;
    gap: 10px;
  }
  .cwdi-button {
    background-color: rgb(44, 47, 54);
    outline: none;
    border: 1px solid rgb(64, 68, 79);
    border-radius: 12px;
    display: flex;
    flex-direction: row;
    -webkit-box-align: center;
    align-items: center;
    -webkit-box-pack: justify;
    justify-content: space-between;
    padding: 1rem;
    margin-top: 0px;
    opacity: 1;
    width: 100% !important;
    user-select: none;
    letter-spacing: -0.018em;
    &:hover {
      cursor: pointer;
      border: 1px solid rgb(33, 114, 229);
    }
    &:focus {
      box-shadow: rgb(33, 114, 229) 0px 0px 0px 1px;
    }
    .cwdib-name {
      display: flex;
      flex-flow: column nowrap;
      -webkit-box-pack: center;
      justify-content: center;
      height: 100%;
    }
    .cwdibn-name {
      display: flex;
      flex-flow: row nowrap;
      color: rgb(255, 255, 255);
      font-size: 1rem;
      font-weight: 500;
    }
    .cwdi-icon {
      display: flex;
      flex-flow: column nowrap;
      -webkit-box-align: center;
      align-items: center;
      -webkit-box-pack: center;
      justify-content: center;
      img {
        height: 24px;
        width: 24px;
      }
    }
  }
  .cwd-new {
    display: flex;
    flex-flow: row wrap;
    -webkit-box-align: center;
    align-items: center;
    -webkit-box-pack: center;
    justify-content: center;
    margin-top: 2rem;
    span {
      box-sizing: border-box;
    }
    a {
      text-decoration: none;
      box-sizing: border-box;
      cursor: pointer;
      color: rgb(33, 114, 229);
      font-weight: 500;
      margin-left: 6px;
    }
  }
}

.new-tron {
  display: flex;
  flex-flow: row wrap;
  -webkit-box-align: center;
  align-items: center;
  -webkit-box-pack: center;
  justify-content: center;
  margin-top: 2rem;
  span {
    margin-right: 8px;
    color #fff
  }
  .nt-link {
    text-decoration: none;
    cursor: pointer;
    color: rgb(33, 114, 229);
    font-weight: 500;
  }
}