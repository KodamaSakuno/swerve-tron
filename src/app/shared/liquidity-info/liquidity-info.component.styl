:host
  display grid
  row-gap 12px
  border-radius 16px
  padding 0.75rem

.header
  font-size 16px

.pool-info
  display flex
  flex-wrap wrap
  .token-text
    font-size 20px
  .token-text-title
    font-size 20px
    margin-right 10px

.token-icons
  margin-right 14.6667px

.token-other
  width 20px
  height 20px

.token-logo
  width 20px
  height 20px
  box-shadow rgba(0, 0, 0, 0.075) 0px 6px 10px
  border-radius 24px

.pool-detail
  display grid
  row-gap 8px
  color rgb(136, 141, 155)
  font-size 16px
  .pool-detail-item
    display flex
    justify-content space-between

.buttons
  display flex

  .button
    width 100%
    font-weight 500
    text-align center
    border-radius 20px
    outline none
    border 1px solid transparent
    text-decoration none
    display flex
    -webkit-box-pack center
    justify-content center
    flex-wrap nowrap
    -webkit-box-align center
    align-items center
    cursor pointer
    position relative
    z-index 1
    background-color rgb(33, 114, 229)
    color white
    padding 16px
    box-sizing border-box

    .button
      box-sizing border-box
      margin 0px
      min-width 0px
      font-weight 500
      font-size 20px
      line-height 24px
