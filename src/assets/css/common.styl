.container {
  display: flex;
  flex-direction: column;
  width: 100%;
  padding-top: 60px;
  padding-bottom: 60px;
  -webkit-box-align: center;
  align-items: center;
  flex: 1 1 0%;
  overflow: hidden auto;
  z-index: 1;
}

.content-box {
  position: relative;
  max-width: 420px;
  width: 100%;
  background: rgb(33, 36, 41);
  box-shadow: rgba(0, 0, 0, 0.01) 0px 0px 1px, rgba(0, 0, 0, 0.04) 0px 4px 8px, rgba(0, 0, 0, 0.04) 0px 16px 24px, rgba(0, 0, 0, 0.01) 0px 24px 32px;
  border-radius: 30px;
  padding: 1rem;
  box-sizing: border-box;
}

// your position
.r-position-box {
  min-width: 20rem;
  margin-top: 1rem;
  margin-bottom: 100px;
}

// Button components
.main-button
  overflow: hidden;
  font-size: inherit;
  position: relative;
  z-index: 1;
  padding: 18px;
  width: 100%;
  font-weight: 500;
  text-align: center;
  border-radius: 20px;
  text-decoration: none;
  display: flex;
  -webkit-box-pack: center;
  justify-content: center;
  flex-wrap: nowrap;
  -webkit-box-align: center;
  align-items: center;

  background-color: #2172e5;
  color: white;
  cursor: auto;
  box-shadow: none;
  border: 1px solid transparent;
  outline: none;
  opacity: 1;
  user-select: none;
  box-sizing: border-box;

  &:active {
    filter: brightness(0.8);
  }
  &:hover {
    background-color: rgb(25, 102, 212);
  }
  &:focus {
    box-shadow: rgb(25, 102, 212) 0px 0px 0px 1pt;
    background-color: rgb(25, 102, 212);
  }
  &:disabled {
    background-color: rgb(64, 68, 79);
    color: rgb(108, 114, 132);
    &:hover {
      background-color: rgb(64, 68, 79);
    }
    &:focus {
      box-shadow: none;
      background-color: rgb(64, 68, 79);
    }
  }